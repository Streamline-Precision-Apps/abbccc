model Client {
  id             String         @id @default(uuid())
  name           String         @unique
  description    String?
  creationReason String? // Reason for creating the client
  approvalStatus ApprovalStatus @default(PENDING) // PENDING, APPROVED, REJECTED
  jobsiteId      String?
  address        String?
  city           String?
  state          String?
  zipCode        String?
  country        String         @default("US")
  phone          String?
  email          String?
  contactPerson  String?
  hasProject     Boolean        @default(true)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  companyId      String
  createdById    String?
  createdBy      User?          @relation(fields: [createdById], references: [id])
  createdVia     CreatedVia     @default(ADMIN)
  Company        Company        @relation(fields: [companyId], references: [id])
  Jobsites       Jobsite[]

  @@index([companyId, name])
  @@index([hasProject])
}

enum CreatedVia {
  ADMIN
  MOBILE
}
