generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Permission {
  USER
  MANAGER
  ADMIN
  SUPERADMIN
}

enum EquipmentTags {
  TRUCK
  TRAILER
  VEHICLE
  EQUIPMENT
}

enum IsActive {
  ACTIVE
  INACTIVE
}

enum WorkType {
  MECHANIC
  TRUCK_DRIVER
  LABOR
  TASCO
}

enum Priority {
  PENDING
  LOW
  MEDIUM
  HIGH
  TODAY
}

enum LoadType {
  UNSCREENED
  SCREENED
}

enum EquipmentState {
  AVAILABLE
  IN_USE
  MAINTENANCE
  NEEDS_REPAIR
  RETIRED
}

// used to track status process
//* IN_PROGRESS: The process is currently ongoing.
//* PENDING: The process is waiting for approval or action.
//* APPROVED: The process has been approved.
//* REJECTED: The process has been rejected or denied.
enum ApprovalStatus {
  IN_PROGRESS
  PENDING
  APPROVED
  REJECTED
}

enum ReportStatus {
  PENDING // Report is queued but not yet processed
  RUNNING // Report is currently being generated
  COMPLETED // Report has finished successfully
  FAILED // Report encountered an error
  CANCELED // Report was manually canceled
}

enum ReportVisibility {
  PRIVATE // Only the creator can view the report
  MANAGEMENT // All users with manager role can access
  COMPANY // Visible to all company users
}

// used to track status process similar to ApprovalStatus but for forms
//* DRAFT: The form is being created and not yet submitted.
//* PENDING: The form has been submitted and is awaiting review.
//* APPROVED: The form has been reviewed and approved.
//* DENIED: The form has been reviewed and denied.

enum FormStatus {
  DRAFT
  PENDING
  APPROVED
  DENIED
}

enum FieldType {
  HEADER
  PARAGRAPH
  TEXT
  TEXTAREA
  NUMBER
  DATE
  FILE
  DROPDOWN
  CHECKBOX
  MULTISELECT
  RADIO
}
