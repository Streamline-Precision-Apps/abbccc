generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  // provider  = "postgresql"
  // url       = env("POSTGRES_PRISMA_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING")
  provider = "sqlite" // or "postgresql" if using Postgres
  url      = env("DATABASE_URL")
}

enum Permission {
  USER
  MANAGER
  ADMIN
  SUPERADMIN
}

enum EquipmentTags {
  TRUCK
  TRAILER
  VEHICLE
  EQUIPMENT
}

enum EquipmentStatus {
  OPERATIONAL
  NEEDS_REPAIR
  NEEDS_MAINTENANCE
}

enum IsActive {
  ACTIVE
  INACTIVE
}

enum WorkType {
  MECHANIC
  TRUCK_DRIVER
  LABOR
  TASCO
}

enum Priority {
  PENDING
  LOW
  MEDIUM
  HIGH
  TODAY
}

enum LoadType {
  UNSCREENED
  SCREENED
}

enum TimeSheetStatus {
  PENDING
  APPROVED
  DENIED
}

enum EquipmentUsageType {
  TASCO
  TRUCKING
  MAINTENANCE
  LABOR
  GENERAL
}

enum EquipmentState {
  AVAILABLE
  IN_USE
  MAINTENANCE
  NEEDS_REPAIR
  RETIRED
}

enum AuditAction {
  CREATED
  UPDATED
  DELETED
  APPROVED
  REJECTED
}

enum EntityType {
  EQUIPMENT
  JOBSITE
  USER
  COMPANY
  TIMESHEET
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  CHANGES_REQUESTED
}
