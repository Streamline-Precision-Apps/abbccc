generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Permission {
  USER
  MANAGER
  ADMIN
  SUPERADMIN
}

enum EquipmentTags {
  TRUCK
  TRAILER
  EQUIPMENT
  VEHICLE
}

enum EquipmentStatus {
  OPERATIONAL
  NEEDS_REPAIR
  NEEDS_MAINTENANCE
}

enum IsActive {
  ACTIVE
  INACTIVE
}

enum WorkType {
  MECHANIC
  TRUCK_DRIVER
  LABOR
  TASCO
}

enum Priority {
  PENDING
  LOW
  MEDIUM
  HIGH
  TODAY
}

enum LoadType {
  UNSCREENED
  SCREENED
}
