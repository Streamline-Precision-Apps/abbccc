model Jobsite {
  id                    String                 @id @default(cuid())
  qrId                  String                 @unique @default(cuid())
  name                  String
  description           String
  isActive              Boolean                @default(true)
  status                FormStatus             @default(PENDING)
  address               String
  city                  String
  state                 String
  zipCode               String
  country               String                 @default("US")
  comment               String?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  archiveDate           DateTime?
  companyId             String?
  Client                String?                @default("Streamline Precision LLC") // chick barn can be set in the job site section
  EmployeeEquipmentLogs EmployeeEquipmentLog[]
  CreationLogs          CreationLogs[]
  EquipmentHauled       EquipmentHauled[]
  Company               Company?               @relation(fields: [companyId], references: [id])
  TimeSheets            TimeSheet[]
  CCTags                CCTag[]                @relation("CCTagToJobsite")

  @@unique([name, address, city, state])
  @@index([qrId])
}
