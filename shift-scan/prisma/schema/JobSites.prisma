model Jobsite {
  id              String            @id @default(uuid())
  qrId            String            @unique @default(uuid())
  name            String
  description     String
  creationReason  String? // Reason for creating the jobsite
  approvalStatus  ApprovalStatus    @default(PENDING) // PENDING, APPROVED, REJECTED
  isActive        Boolean           @default(true)
  address         String
  city            String
  state           String
  zipCode         String
  country         String            @default("US")
  comment         String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  archiveDate     DateTime?
  clientId        String // track jobs based on similar clients 
  createdById     String?
  createdBy       User?             @relation(fields: [createdById], references: [id])
  createdVia      CreatedVia        @default(ADMIN)
  EquipmentHauled EquipmentHauled[]
  Client          Client            @relation(fields: [clientId], references: [id])
  TimeSheets      TimeSheet[]
  CCTags          CCTag[]           @relation("CCTagToJobsite")

  @@unique([name, address, city, state])
  @@index([qrId])
  @@index([clientId])
}
